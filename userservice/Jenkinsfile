pipeline {
    agent any

    environment {
        IMAGE_NAME = 'adeshprime17/userservice25'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo 'Building the project using Maven...'
                dir('userservice') {
                    bat 'mvnw.cmd clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                bat 'docker build -t %IMAGE_NAME% ./userservice'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'adeshprime17', passwordVariable: 'AdeshDocker25@')]) {
                    bat '''
                echo Logging into Docker Hub...
                docker login -u %DOCKER_USERNAME% -p %DOCKER_PASSWORD%
                docker push %IMAGE_NAME%
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'Deploying to Kubernetes...'
                bat 'kubectl apply -f ./userservice/k8s/deployment.yaml'
                bat 'kubectl apply -f ./userservice/k8s/service.yaml'
            }
        }
    }
}
